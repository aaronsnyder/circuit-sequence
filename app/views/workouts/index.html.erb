<h1>Workouts</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th colspan="3"></th>
  </tr>

  <% @workouts.each do |workout| %>
    <tr>
      <td><%= workout.name %></td>
      <td><%= workout.location %></td>
      <td><%= link_to 'Show', workout_path(workout) %></td>
   	  <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
      <td><%= link_to 'Destroy', workout_path(workout), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New workout', new_workout_path %>