<div class="station well">
	<p>
		<strong>Name:</strong>
		<%= station.name %>
	</p>

	<p>
		<strong>Location:</strong>
		<%= station.location %>
	</p>

	<% if station.exercises.any? %>
		<hr />
		
		<h4>Exercises</h4>
		<ol>
			<%= render partial: "stations/exercise_instance", collection: station.exercises, :as => :exercise %>
		</ol>
	<% end %>

	<hr />

	<h5>Add New Exercise</h5>
	<form action="<%= exercise_instance_create_path %>" method="post">
		<select name="exercise_instance[exercise_id]">
			<%= render partial: "exercises/select_exercise_instance", collection: @all_exercises, :as => :this_exercise %>
		</select>

